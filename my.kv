WindowManager:
    PaginaInicio:
    PaginaAlta:

<PaginaInicio>:
    name: "inicio"
    caja: caja

    GridLayout:
        cols: 1

        GridLayout:
            id: caja
            cols: 2

            TextInput
                multiline: False
                on_text: root.ver_productos(self.text)

        Button:
            text: "Alta de producto"
            on_release:
                root.manager.transition.direction = "left"
                app.root.current = "alta"


<PaginaAlta>:
    name: "alta"
    nombre: nombre
    descripcion: descripcion
    categoria: categoria
    precio: precio
    stock: stock

    BoxLayout:
        orientation: "vertical"
        size: root.width - 100, root.height - 100
        pos: 50, 50

        BoxLayout:
            orientation: "vertical"
#            size: root.width, root.height * 0.10
            Label:
                text: "Mi tienda - Alta de producto"

        BoxLayout:
            orientation: "vertical"

            Label
                text: "Nombre del producto"
            TextInput
                id: nombre
                multiline: False

            Label
                text: "Descripción"
            TextInput
                id: descripcion
                multiline: True

            Label
                text: "Categoría"
            TextInput
                id: categoria
                multiline: False

            Label
                text: "Precio"
            TextInput
                id: precio
                input_type: "number"
                input_filter: "float"
                multiline: False

            Label
                text: "Stock"
            TextInput
                id: stock
                input_type: "number"
                input_filter: "int"
                multiline: False

        BoxLayout:
            orientation: "horizontal"
#            size: root.width, root.height * 0.10
            Button
                text: "Dar de alta"
                font_size: 40
                on_release: root.alta()
            Button:
                text: "Volver"
                on_release:
                    app.root.current = "inicio"
                    root.manager.transition.direction = "right"
